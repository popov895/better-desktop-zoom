<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <enum id="org.gnome.shell.extensions.better-desktop-zoom.ScrollToZoomModifierKeys">
        <value value="0" nick="super+ctrl"/>
        <value value="1" nick="super+alt"/>
        <value value="2" nick="super+shift"/>
    </enum>
    <schema id="org.gnome.shell.extensions.better-desktop-zoom" path="/org/gnome/shell/extensions/better-desktop-zoom/">
        <key name="zoom-factor" type="d">
            <range min="1.1" max="2"/>
            <default>1.2</default>
        </key>
        <key name="scroll-to-zoom" type="b">
            <default>false</default>
        </key>
        <key name="scroll-to-zoom-modifier-keys" enum="org.gnome.shell.extensions.better-desktop-zoom.ScrollToZoomModifierKeys">
            <default>"super+ctrl"</default>
        </key>
        <key name="zoom-in-shortcut" type="as">
            <default><![CDATA[["<Super>equal"]]]></default>
        </key>
        <key name="zoom-out-shortcut" type="as">
            <default><![CDATA[["<Super>minus"]]]></default>
        </key>
    </schema>
</schemalist>
